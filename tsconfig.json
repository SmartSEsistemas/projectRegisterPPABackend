{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "src/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}